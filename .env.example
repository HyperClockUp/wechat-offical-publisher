# 微信公众号配置示例
# 复制此文件为 .env 并填入你的实际配置

# 单账号配置（简单模式）
WECHAT_APP_ID=your_app_id_here
WECHAT_APP_SECRET=your_app_secret_here

# 多账号配置（高级模式）
# 格式：账号ID:AppID:AppSecret:账号名称
# 多个账号用逗号分隔
WECHAT_ACCOUNTS=main:your_main_appid:your_main_secret:主账号,test:your_test_appid:your_test_secret:测试账号

# 功能配置
WECHAT_USE_STABLE_TOKEN=false  # 是否使用 stable_token 接口（推荐设为 true）
DEBUG=false                    # 是否启用调试模式
DEFAULT_THEME=default          # 默认主题
PUBLISH_TO_DRAFT=true         # 默认是否发布到草稿箱

# 开发环境配置
NODE_ENV=development          # 环境类型：development, production, test

# 日志配置
WECHAT_PUBLISHER_LOG_LEVEL=1  # 日志级别：0=DEBUG, 1=INFO, 2=WARN, 3=ERROR
WECHAT_PUBLISHER_LOG_DIR=logs # 日志目录

# 性能配置
WECHAT_PUBLISHER_ENABLE_MONITORING=true  # 是否启用性能监控

# 缓存配置
WECHAT_PUBLISHER_OUTPUT_DIR=dist         # 输出目录
WECHAT_PUBLISHER_THEME=default           # 主题名称